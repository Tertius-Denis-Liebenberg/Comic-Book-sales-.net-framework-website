<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="~/Content/LayoutStyling.css" />
</head>
<body>
    <nav class="navBar">
        <ul class="PageLink">
            <li>@Html.ActionLink("Home", "Index", "Home")</li>
            <li>@Html.ActionLink("Location", "Location", "Home")</li>
            <li>@Html.ActionLink("Favourites", "Favourites", "Home")</li>
            <li>@Html.ActionLink("About Us", "About", "Home")</li>
            <li><a href="https://www.cbr.com/category/comics/news/">Latest News</a></li>
        </ul>
    </nav>
    <div>
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
